    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.2.4</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>
    <groupId>io.github.vishalmysore</groupId>
    <artifactId>easyQServer</artifactId>
    <version>0.2.8.10.3</version>
    <name>Tools For Artificial Intelligence</name>
    <description>
        EasyQZ is an AI Deep Research agent for quiz generation that allows users to generate quizzes from any article, link, topic, or custom text. Whether you're a student, educator, or professional, EasyQ helps you test your knowledge, compete with others, and discover trending topics.
    </description>
    <url>https://github.com/vishalmysore/easyqz</url>
    <licenses>
        <license>
            <name>MIT License</name>
            <url>https://opensource.org/license/mit</url>
        </license>
    </licenses>
    <developers>
        <developer>
            <name>Vishal Mysore</name>
            <email>visrow@gmail.com</email>
            <organization>Vishal Mysore</organization>
            <organizationUrl>Vishal Mysore</organizationUrl>
        </developer>
    </developers>
    <scm>
        <connection>scm:git:git://github.com/vishalmysore/easyqz.git</connection>
        <developerConnection>scm:git:ssh://github.com:vishalmysore/easyqz.git</developerConnection>
        <url>http://github.com/vishalmysore/easyqz/tree/master</url>
    </scm>
